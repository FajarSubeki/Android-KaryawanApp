<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="57dp"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnKaryawan"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorCyan"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/ic_collaboration"
                android:paddingTop="25dp"
                android:text="Karyawan"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btAbsensi"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorGreenLight"
                android:foreground="?attr/selectableItemBackground"
                android:drawableTop="@drawable/ic_fingerprint_scanner"
                android:paddingTop="25dp"
                android:text="Absensi"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btProfile"
                android:layout_width="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:drawableLeft="@drawable/ic_enterprise"
                android:paddingLeft="45dp"
                android:text="Profile Perusahaan"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btGajian"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorPurple"
                android:drawableTop="@drawable/ic_money"
                android:paddingTop="25dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Gajian"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btArisan"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorBrown"
                android:drawableTop="@drawable/ic_money_bag"
                android:paddingTop="25dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Arisan"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btHokian"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorBlueDark"
                android:drawableLeft="@drawable/ic_trophy"
                android:paddingLeft="35dp"
                android:foreground="?attr/selectableItemBackground"
                android:text="Hoki-Hokian"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>