<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailKaryawan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.intrusoft.squint.DiagonalView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash"
            android:id="@+id/background"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/man"
            app:civ_border_color="#40FFFFFF"
            app:civ_border_width="10dp"
            android:id="@+id/foto_karaywan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentStart="true"
            android:layout_below="@id/background"
            android:layout_marginStart="30dp"
            android:textSize="20dp"
            android:textColor="@color/colorDark"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_alignStart="@id/name"
            android:layout_below="@id/name"
            android:layout_marginTop="6dp"
            android:textColor="#5c5c5c"
            android:layout_marginRight="16dp"
            android:text="Google Certified Associate Android Developer | Android App, Game, Web and Software Developer."/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@id/description"
            android:id="@+id/email"
            android:layout_alignStart="@id/description"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_email_black_24dp"
            tools:ignore="VectorDrawableCompat"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/nohp"
            android:layout_alignBottom="@id/email"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/email"
            app:srcCompat="@drawable/ic_contact_phone_black_24dp"
            tools:ignore="VectorDrawableCompat"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/fb"
            android:layout_alignBottom="@id/nohp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/nohp"
            app:srcCompat="@drawable/facebook"
            tools:ignore="VectorDrawableCompat"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/twitter"
            android:layout_alignBottom="@id/fb"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/fb"
            app:srcCompat="@drawable/twitter"
            tools:ignore="VectorDrawableCompat"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/lk"
            android:layout_alignBottom="@id/twitter"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/twitter"
            app:srcCompat="@drawable/linkedin"
            tools:ignore="VectorDrawableCompat"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:id="@+id/git"
            android:layout_alignBottom="@id/lk"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/lk"
            app:srcCompat="@drawable/github"
            tools:ignore="VectorDrawableCompat"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/email"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Karyawan"
                    android:textColor="@color/colorDark"
                    android:textSize="20sp"
                    android:id="@+id/info"
                    android:textStyle="bold"
                    android:fontFamily="@font/capriola"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorDark"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info" />

                <LinearLayout
