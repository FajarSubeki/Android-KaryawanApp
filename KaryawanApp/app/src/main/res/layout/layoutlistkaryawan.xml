<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/foto_karaywan"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/nama_karyawan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fajar Subeki"
                    android:fontFamily="@font/capriola"
                    android:textColor="@color/colorDark"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/foto_karaywan"/>

                <TextView
                    android:id="@+id/jabatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_karyawan"
                    android:layout_toRightOf="@id/foto_karaywan"
                    android:text="Direktur IT"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorJabatan"
                    android:textSize="12dp"
                    />

                <TextView
                    android:id="@+id/nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_karyawan"
                    android:layout_toRightOf="@id/jabatan"
                    android:gravity="right"
                    android:text="0012819212999"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/colorJabatan"
                    android:textSize="12dp"
                    />

            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>